    </TabItem>
    <TabItem Text="我创建的队伍">
        <div style="overflow-y:auto;overflow-x:hidden;height:480px">
            @if (TeamService.teams == null || TeamService.teams.Count == 0)
            {
                <span>
                    加载中...
