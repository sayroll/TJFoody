        <center>
            <div style="padding-bottom:20px;">
                <Button Text="发布组队信息" OnClickWithoutRender="@ShowEditedDialog" />
            </div>
        </center>
        <div style="overflow-y:auto;overflow-x:hidden;height:480px">
